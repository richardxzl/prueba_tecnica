{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entrada</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entrada.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entrada.nombre }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ entrada.correo }}</td>
            </tr>
            <tr>
                <th>Mensaje</th>
                <td>{{ entrada.mensaje }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entrada_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('entrada_edit', { 'id': entrada.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
